<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
    <div class="wrapper ">
        <% include ../partials/contri_sidebar %>
        <div class="main-panel">
            <% include ../partials/contri_navbar %>
            <div class="panel-header panel-header-sm">
            </div>
            <div class="content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <form onsubmit="addDisease(event)" id="diseaseForm" method="POST">
                                <div class="card-header">
                                    <h5 class="card-title">Disease Form</h5>
                                </div>
                                <div class="card-body">
                                    <div class="form-group has-label">
                                        <div class="row">
                                            <div class="col-md-7">
                                                <label>Bacteria Name</label>
                                                <select class="form-control" name="selectBacteria" id="toSelectBacteria"></select>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <label>Disease Name</label>
                                                <input autocomplete="off" class="form-control" name="strDiseaseName" type="text" />

                                                <label>Disease Description</label>
                                                <textarea class="form-control" name="strDiseaseDesc" type="text"></textarea>
                                            </div>
                                        </div>
                                        <div class="symptomsTxt">
                                            <div class="row">
                                                <br>
                                                <br>
                                                <br>
                                                <br>
                                                <div class="col-md-10">
                                                    <label>Symptoms</label>
                                                    <input autocomplete="off" class="form-control" name="strSymptoms" type="text" />
                                                </div>
                                                <div class="col-sm-2">
                                                    <button type='button' onclick="addField()" rel='tooltip' class='btn btn-primary btn-icon btn-sm add btnPosition'>+</button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-button">
                                            <button type="submit" class="btn btn-primary pull-right">Add</button>
                                            <button type="button" onclick="clearDisease()" class="btn btn-warning pull-right">Clear</button>
                                            <br>
                                            <br>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table" id="diseaseTable">
                                        <thead class="text-primary">
                                            <th><small><b>DISEASE</b></small></th>
                                            <th><small><b>ACTION</b></small></th>
                                            <th><small><b>STATUS</b></small></th>
                                        </thead>
                                        <tbody id="diseaseTableList">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--View Modal-->
    <div class="modal fade" id="viewModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: none;"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header justify-content-center">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="title title-up">DISEASE INFORMATION</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-4">
                            <label>Status</label>
                        </div>
                        <div class="col-md-2">
                            <label>:</label>
                        </div>
                        <div class="col-md-2">
                            <label id="status"></label>
                        </div>
                    </div>
                    <h6 id="viewDiseaseName"></h6>
                    <p id="viewSelected"></p>
                    <p id="viewDiseaseDesc"></p>
                    <label><b>Symptoms</b></label>
                    <div id="viewSymptoms"></div>
                    <div class="row">
                    </div>
                    <div class="category form-category" id="name"></div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!--   Core JS Files   -->
    <% include ../partials/core_js %>
    <script src="../assets/js/contri_js/disease.js"></script>
    <script>
        $(".navbarName").html("Disease");
        $("#disease").addClass("active");
        $("#dImg").attr("src", "/assets/img/diseaseactive.png");
    </script>
</body>

</html>