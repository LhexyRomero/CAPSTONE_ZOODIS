<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
    <div class="wrapper ">
        <% include ../partials/contri_sidebar %>
        <div class="main-panel">
            <% include ../partials/contri_navbar %>
            <div class="panel-header panel-header-sm">
            </div>
            <div class="content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <form id="toxinForm" method="POST" action="/toxin" onsubmit="addToxin(event)">
                                <div class="card-header ">
                                    <h5 class="card-title">Toxin</h5>
                                </div>
                                <div class="card-body ">
                                    <div class="form-group has-label">

                                        <label>Bacteria</label>
                                        <select class="form-control" name="selectBacteria" id="toSelectBacteria"></select>

                                        <label>Toxin Name</label>
                                        <input autocomplete="off" class="form-control" name="strToxinName" type="text" />

                                        <label>Structure Feature</label>
                                        <textarea class="form-control" name="strStructureFeature"></textarea>

                                        <label>Function</label>
                                        <textarea class="form-control" name="strFunction"></textarea>

                                    </div>
                                </div>
                                <div class="card-footer" align="right">
                                    <button type="button" class="btn btn-warning " onclick="clearToxin()">Clear</button>
                                    <button type="submit" class="btn btn-primary ">Add</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <small>
                                    <h4 class="card-title"> BACTERIA TOXINS</h4>
                                </small>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table" id="toxinTable">
                                        <thead class="text-primary">
                                            <th><small><b>TOXINS</b></small></th>
                                            <th><small><b>ACTION</b></small></th>
                                            <th><small><b>STATUS</b></small></th>
                                        </thead>
                                        <tbody id="toxinList">
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--View Modal-->
    <div class="modal fade" id="viewModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: none;"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header justify-content-center">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="title title-up">TOXIN INFORMATION</h6>
                </div>
                <div class="modal-body">
                    <div class="card-body">
                        <h5 id="viewToxinName"></h6>
                        <label id="status"></label><br>
                        <label>Structure Feature</label><br>
                        <label id="structureFeature"></label><br><br>
                        <label>Function</label><br>
                        <label id="function"></label>
                        <div class="category form-category" id="name"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addCarrier" tabindex="-1" role="dialog" aria-labelledby="addHost" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h4 class="title title-up">Carrier of Toxin</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="carrierForm" method="POST">
                    <div class="form-group has-label">
                        <label>Toxin Name</label>
                        <input type="hidden" name="forToxin">
                        <input class="form-control" id="toDisplayToxin" disabled>
                        <label>Bacteria Name</label>
                        <select class="form-control" name="toModal" id="toModalBacteria"></select>
                    </div>
                </form>
            </div>
            <div class="for-footer">
                <div align="right">
                    <button type="button" class="btn btn-warning" onclick="clearBacteria()" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="addCarrier()">Add</button>
                </div>
            </div>
            </div>
        </div>
    </div>
    <!--   Core JS Files   -->
    <% include ../partials/core_js %>
    <script src="../assets/js/contri_js/bacteria.js"></script>
    <script>
        $(".navbarName").html("Maintenance / Toxins");
        $("#main").addClass("active");
        $("#maintenance").addClass("show");
        $("#toxin").addClass("active");
    </script>
</body>

</html>