<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
    <div class="wrapper ">
        <% include ../partials/contri_sidebar %>
        <div class="main-panel">
            <% include ../partials/navbar %>
            <div class="panel-header panel-header-sm">
            </div>

            <div class="content">
                <form id="preventionForm" method="POST" onsubmit="addPrevention(event)">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header ">
                                    <h4 class="card-title"> PREVENTION FORM</h4>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-7">
                                            <div class="form-group has-label">
                                                <label>Disease Name</label>
                                                <select class="form-control" name="selectDisease" id="toSelectDisease"></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-header">
                                    <div class="form-group has-label">
                                        <div class="preventionTxt">
                                            <div class="row">
                                                <br>
                                                <br>
                                                <br>
                                                <br>
                                                <div class="col-md-10">
                                                    <label>Prevention/s</label>
                                                    <input class="form-control" name="strPrevention" type="text" />

                                                </div>
                                                <div class="col-sm-2">
                                                    <button type='button' onclick="addFieldPrevention()" rel='tooltip'
                                                        class='btn btn-primary btn-icon btn-sm add btnPosition'>+</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer" align="right">
                                    <button type="button" class="btn btn-warning" onclick="clearPrevention()">Clear</button>
                                    <button type="submit" class="btn btn-primary">Add</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table" id="preventionTable">
                                            <thead class="text-primary">
                                                <th><small><b>DISEASE</b></small></th>
                                                <th><small><b>ACTION</b></small></th>
                                                <th><small><b>STATUS</b></small></th>
                                            </thead>
                                            <tbody id="preventionTableList">
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--View Modal-->
    <div class="modal fade" id="viewModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" style="display: none;"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header justify-content-center">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="title title-up">PREVENTION INFORMATION</h4>
                </div>
                <div class="modal-body">
                    <h6 id="viewPreventionName"></h6>

                    <label><b>Prevention</b></label>
                    <div id="viewPrevention"></div>

                    <div class="row">
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!--   Core JS Files   -->
    <% include ../partials/core_js %>
    <script src="../assets/js/contri_js/prevention.js"></script>
    <script>
        $(".navbarName").html("Prevention");
        $("#prevention").addClass("active");
        $("#pImg").attr("src","/assets/img/preventionactive.png");
    </script>

</body>

</html>