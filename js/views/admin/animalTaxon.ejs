<!DOCTYPE html>
<html lang="en">
<head><% include ../partials/head %></head>

<body>
    <div class="wrapper ">
        <% include ../partials/admin_sidebar %>
        <div class="main-panel">
            <% include ../partials/admin_navbar %>
            <div class="panel-header panel-header-sm">
            </div>
            <div class="content">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title"> ANIMAL TAXONOMIC CLASSIFICATION</h5>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table" id="animalTaxonTable">
                                        <thead class="text-primary">
                                            <th><small><b>PHYLUM</b></small></th>
                                            <th><small><b>CLASS</b></small></th>
                                            <th><small><b>ORDER</b></small></th>
                                            <th><small><b>FAMILY</b></small></th>
                                            <th><small><b>GENUS</b></small></th>
                                            <th><small><b>SPECIES</b></small></th>
                                            <th><small><b>ACTION</b></small></th>
                                        </thead>
                                        <tbody id="animaltaxonTableList">
                                        </tbody>
                                    </table>
                                </div>
                                <div class="card-button">
                                    <button type="button" class="btn btn-primary pull-right" data-toggle="collapse" href="#AddCollapse" role="button" aria-expanded="true"
                                        aria-controls="AddCollapse">Add</button>
                                    <br>
                                    <br>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="collapse" id="AddCollapse">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card">
                                <form id="animalTaxonForm" method="POST" action="/animalTaxon" onsubmit="addAnimalTaxon(event)">

                                    <div class="card-header ">
                                        <button type="button" class="close" aria-label="Close" data-toggle="collapse" href="#AddCollapse">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        <h5 class="card-title">Animal taxonomic Classification</h5>
                                    </div>

                                    <div class="card-body ">

                                        <div class="form-group has-label">
                                            <label>Phylum</label>
                                            <input autocomplete="off" class="form-control" name="strPhylum" type="text" />

                                            <label>Class</label>
                                            <input autocomplete="off" class="form-control" name="strClass" type="text" />

                                            <label>Order</label>
                                            <input autocomplete="off" class="form-control" name="strOrder" type="text" />

                                            <label>Family</label>
                                            <input autocomplete="off" class="form-control" name="strFamily" type="text" />

                                            <label>Genus</label>
                                            <input autocomplete="off" class="form-control" name="strGenus" type="text" />

                                            <label>Species</label>
                                            <input autocomplete="off" class="form-control" name="strSpecies" type="text" />

                                        </div>
                                        <h6 class="card-title">References</h6>
                                        <div class="form-group has-label"><br>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label>Journal Number</label>
                                                    <select class="form-control" name="selectJournal" id="toSelectJournal"></select><br>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer" align="right">
                                        <button type="button" class="btn btn-warning " onclick="clearAnimalTaxon(event)">Clear</button>
                                        <button type="submit" class="btn btn-primary ">Add</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h6 class="modal-title" id="exampleModalLongTitle">ANIMAL TAXONOMY CLASSIFICATION</h6>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form id="editAnimalTaxonForm" action="/updateAnimalTaxon" method="POST">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card-body">
                                            <div class="form-group has-label">
                                                <label class="modalLabel">Phylum</label>
                                                <input class="form-control" name="modalPhylum" type="text" />

                                                <label class="modalLabel">Class</label>
                                                <input class="form-control" name="modalClass" type="text" />

                                                <label class="modalLabel">Order</label>
                                                <input class="form-control" name="modalOrder" type="text" />

                                                <label class="modalLabel">Family</label>
                                                <input class="form-control" name="modalFamily" type="text" />

                                                <label class="modalLabel">Genus</label>
                                                <input class="form-control" name="modalGenus" type="text" />

                                                <label class="modalLabel">Species</label>
                                                <input class="form-control" name="modalSpecies" type="text" />

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div align="right">
                                    <button type="button" class="btn btn-primary" onclick="updateAnimalTaxon()">Save changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--   Core JS Files   -->
    <% include ../partials/core_js %>
    <script src="../../assets/js/admin/animal.js"></script>
    <script>
        $(".navbarName").html("Maintenance / Animal Taxonomy");
        $("#main").addClass("active");
        $("#maintenance").addClass("show");
        $("#animalTaxon").addClass("active");
    </script>
</body>
</html>