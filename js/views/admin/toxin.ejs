<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/head %>
</head>

<body>
    <div class="wrapper ">
        <% include ../partials/admin_sidebar %>
        <div class="main-panel">
            <% include ../partials/admin_navbar %>
            <div class="panel-header panel-header-sm">
            </div>
            <div class="content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <form id="toxinForm" method="POST" action="/toxin" onsubmit="addToxin(event)">

                                <div class="card-header ">
                                    <h5 class="card-title">Toxin</h5>
                                </div>
                                <div class="card-body ">
                                    <div class="form-group has-label">
                                        <label>Toxin Name</label>
                                        <input autocomplete = "off" class="form-control" name="strToxinName" type="text" />

                                        <label>Structure Feature</label>
                                        <textarea class="form-control" name="strStructureFeature"></textarea>

                                        <label>Function</label>
                                        <textarea class="form-control" name="strFunction"></textarea>

                                    </div>
                                </div>
                                <div class="card-footer" align="right">
                                    <button type="button" class="btn btn-warning " onclick="clearToxin()">Clear</button>
                                    <button type="submit" class="btn btn-primary ">Add</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header">
                                <small>
                                    <h4 class="card-title"> BACTERIA TOXINS</h4>
                                </small>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table" id="toxinTable">
                                        <thead class="text-primary">
                                            <th><small><b>TOXINS</b></small></th>
                                            <th><small><b>STRUCTURE FEATURE</b></small></th>
                                            <th><small><b>ACTION</b></small></th>
                                        </thead>
                                        <tbody id="toxinTableList">
                                        </tbody>
                                    </table>
                                </div>

                                <div class="card-button">
                                    <button type="button" class="btn btn-primary pull-right" data-toggle="collapse"
                                        href="#AddCollapse" role="button" aria-expanded="true" aria-controls="AddCollapse">Add</button>
                                    <br>
                                    <br>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h6 class="modal-title" id="exampleModalLongTitle">BACTERIA TOXIN</h6>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form id="editToxinForm" action="/updateToxin" method="POST">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card-body">
                                            <div class="form-group has-label">

                                                <label class="modalLabel">Toxin Name</label>
                                                <input class="form-control" name="modalToxinName" type="text" />

                                                <label class="modalLabel">Structure Feature</label>
                                                <textarea class="form-control" name="modalStructureFeature"></textarea>

                                                <label class="modalLabel">Function</label>
                                                <textarea class="form-control" name="modalFunction"></textarea>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div align="right">
                                    <button type="button" class="btn btn-primary" onclick="updateToxin()">Save changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--   Core JS Files   -->
    <% include ../partials/core_js %>
    <script src="../../assets/js/admin/bacteria.js"></script>
    <script>
        $(".navbarName").html("Maintenance / Toxin");
        $("#main").addClass("active");
        $("#maintenance").addClass("show");
        $("#toxin").addClass("active");
    </script>
</body>

</html>