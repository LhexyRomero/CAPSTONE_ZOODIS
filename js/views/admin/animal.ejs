<!DOCTYPE html>
<html lang="en">
<head><% include ../partials/head %></head>

<body>

    <div class="wrapper ">
        <% include ../partials/admin_sidebar %>
        <div class="main-panel">
            <% include ../partials/admin_navbar %>
            <div class="panel-header panel-header-sm">
            </div>

            <div class="content">
                <form enctype="multipart/form-data" onsubmit="addAnimal(event)" method="POST" action="#" id="animalForm">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="card-header ">
                                            <h5 class="card-title"><b>ANIMAL FORM</b></h5>
                                        </div>

                                        <div class="card-body ">
                                            <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                                                <div class="fileinput-new thumbnail">
                                                    <img src="../assets/img/image_placeholder.jpg" width="170" height="110" alt="...">
                                                </div>
                                                <div class="fileinput-preview fileinput-exists thumbnail"></div>
                                                <div>
                                                    <span class="btn btn-rose btn-file">
                                                        <span class="fileinput-new">Select image</span>
                                                        <span class="fileinput-exists">Change</span>
                                                        <input type="file" class="animalAdd" name="animalImg" />
                                                    </span>
                                                    <a href="#pablo" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput">
                                                        <i class="fa fa-times"></i> Remove</a>
                                                </div>
                                            </div>

                                            <div class="form-group has-label">
                                                <label>Common Name *</label>
                                                <input class="form-control animalAdd" name="strCommonName" type="text" />

                                                <label>Scientific Name *</label>
                                                <input class="form-control animalAdd searchAnimal" name="strScientificName" type="text" />

                                                <label>Body Site *</label>
                                                <input class="form-control animalAdd" name="strBodySite" type="text" />

                                                <br>
                                                <h6 class="card-title">References</h6>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <label>Journal Number</label>
                                                        <select class="form-control" name="selectJournal" id="toSelectJournal"></select><br>
                                                    </div>
                                                </div>
                                            </div><br>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card-header ">
                                            <h5 class="card-title"><b>NAME AND TAXONOMIC CLASSIFICATION</b></h5>
                                        </div>

                                        <div class="card-body ">
                                            <div class="form-group has-label">
                                                <label>Phylum</label>
                                                <input class="form-control" name="strPhylum" type="text" disabled/>

                                                <label>Class</label>
                                                <input class="form-control" name="strClass" type="text" disabled/>

                                                <label>Order</label>
                                                <input class="form-control" name="strOrder" type="text" disabled/>

                                                <label>Family</label>
                                                <input class="form-control" name="strFamily" type="text" disabled/>

                                                <label>Genus</label>
                                                <input class="form-control" name="strGenus" type="text" disabled/>

                                                <label>Species</label>
                                                <input class="form-control" name="strSpecies" type="text" disabled/>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="card-footer" align="right">
                                    <button type="button" class="btn btn-warning" onclick="clearAnimal(event)">Clear</button>
                                    <button type="submit" class="btn btn-primary" id="toSubmitAnimal">Add</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <!--   Core JS Files   -->
            <% include ../partials/core_js %>
            <script src="../../assets/js/admin/animal.js"></script>
            <script>
                $(".navbarName").html("Animal");
                $("#animal").addClass("active");
                $("#aImg").attr("src","/assets/img/animalactive.png");
            </script>
</body>
</html>