<!DOCTYPE html>
<html lang="zxx" class="no-js">

<head>
	<% include ../researcher/partials/head %>
</head>

<body>
	<% include ../researcher/partials/header %>
	<!-- start banner Area -->
	<section class="about-banner relative">
		<div class="overlay overlay-bg"></div>
		<div class="container">
			<div class="row d-flex align-items-center justify-content-center">
				<div class="about-content col-lg-12">
					<h1 class="text-white">
						Disease
					</h1>
					<p class="text-white link-nav"><a href="index">Home </a>
						<span class="lnr lnr-arrow-right"></span> <a href="researcher_disease">Disease</a></p>
				</div>
			</div>
		</div>
	</section>
	<!-- End banner Area -->
	<%
		if(!locals.view){
			if(noRes == false){
	%>
	<!-- Start top-category-widget Area -->
	<section class="post-content-area" id="diseaseSearch">
		<div class="container">
			<div class="row">
				<div class="col-lg-12 col-md-12">
					<div class="menu-content pb-70">
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12 posts-list">
					<div class="row single-post">
						<div class="col-md-8">
							<a class="posts-title">
								<h3><%=(locals.name?name :"")%></h3>
							</a>
							<p class="excert">
								<%=(locals.desc?desc :"")%>
							</p><br>
							<h4>Symptoms : </h4><br>
							<ul class="tags">
								<%
									var symptomsList = "";
									if(locals.symptoms){
										symptoms.forEach((element, index) => {
											symptomsList += "<li class='li'>"+element+"</li>";
										});
									}
								%>
								<%-symptomsList%>
							</ul><br>
							<h4>Prevention : </h4>
							<ul class="tags">
								<%
									var preventionList = "";
									if(locals.preventions){
										preventions.forEach((element, index) => {
											preventionList += "<li class='li'>"+element+"</li>";
										});
									}
								%>
								<%-preventionList%>
							</ul>
						</div>
						<div class="col-md-4 sidebar-widgets">
							<div class="widget-wrap">
								<div class="single-sidebar-widget tag-cloud-widget">
									<h4 class="tagcloud-title">Animal Host/s</h4>
									<%
										var hostTags = '';
										if(locals.animal){
											animal.forEach((element, index) => {
												hostTags += '<br><div class="single-post-list d-flex flex-row align-items-center">';
												hostTags += '<div class="thumb"><img class="img-size" src="' + element.image.replace(/js\\public/g,'assets') + '" alt="EWWW" height="90px" width="90px"></div>&nbsp;&nbsp;&nbsp;';
												hostTags += '<div class="details"><h6>'+element.animalName+'</h6><p>'+element.animalScientificName+'</p></div>';
												hostTags += '</div>';
											});
										}
									%>
									<%-hostTags%>
								</div>
							</div><br>
							<div class="widget-wrap">
								<div class="single-sidebar-widget tag-cloud-widget" id="bacteria">
									<h4 class="tagcloud-title">Bacteria</h4>
									<ul>
										<%
											var bacTags = "";
											if(locals.bacteria){
												bacteria.forEach((element, index) => {
													bacTags += "<li><a href='#'>" + element.bacteriumScientificName + "</a></li>";
												});
											}
										%>
										<%-bacTags%>
									</ul>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<%
			}else{
	%>
	<section id="noResultsDisease" class="post-content-area">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="menu-content pb-70"><br><br>
							<h4>
							<b>No results Found &nbsp; <span class="lnr lnr-sad"></span></b></h4>
						</div>
					</div>
				</div>
			</div>
	</section>
	<%
			}
		}else{
	%>
	<section style="background-color: #f6f6ff" class="recent-blog-area section-gap">
		<div class="container">
			<div class="row d-flex justify-content-center">
				<div class="menu-content pb-60 col-lg-9">
					<div class="title text-center">
						<h1 class="mb-10">Disease List</h1>
						<p>An illness to humans caused by pathogenic bacteria from animals that secrets harmful toxin/s.</p>
					</div>
				</div>
			</div>
			<div class="table-responsive">
				<table class="table" id="disModuleTable">
					<thead class="text-primary">
						<th><small><b>DISEASE</b></small></th>
						<th class="text-center"><small><b>DESCRIPTION</b></small></th>
						<th class="text-center"><small><b>REFERENCE</b></small></th>
					</thead>
					<tbody id="disModuleList">
					</tbody>
				</table>
			</div>
		</div>
	</section>
	<%
		}
	%>

	<!-- start footer Area -->
	<% include ../researcher/partials/footer %>
	<!-- End footer Area -->
	<script src="../../assets/js/researcher/diseaseSearch.js"></script>
</body>

</html>