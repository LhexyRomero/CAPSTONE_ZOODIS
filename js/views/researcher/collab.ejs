<!DOCTYPE html>
<html lang="en">

<head>
	<% include ../researcher/partials/head %>
</head>

<body>
	<% include ../researcher/partials/header %>
	<!-- start banner Area -->
	<section class="relative about-banner">
		<div class="overlay overlay-bg"></div>
		<div class="container">
			<div class="row d-flex align-items-center justify-content-center">
				<div class="about-content col-lg-12">
					<h1 class="text-white">
						Collaborate with Us!
					</h1>
					<p class="text-white link-nav"><a href="index">Home </a> <span class="lnr lnr-arrow-right"></span> <a href="contact.html">
							Contact Us</a></p>
				</div>
			</div>
		</div>
	</section>
	<!-- End banner Area -->

	<!-- Start contact-page Area -->
	<section class="contact-page-area section-gap">
		<div class="container">
			<form class="form-area contact-form" id="collabForm" method="POST" enctype="multipart/form-data" onsubmit="uploadJournal(event)">
				<div class="row">
					<div class="col-lg-6">
						<h2>Collaboration Form</h2><br>
						<div class="notif"></div><br>
						<div class="info"></div>
						<div class="row">
							<div class="col-lg-12 form-group">
								<input name="name" placeholder="Journal Name" class="common-input mb-20 form-control" type="text">

								<div class="form-group form-file-upload form-file-simple">
									<!-- <input type="text" name="inputfile" class="form-control inputFileVisible" placeholder="Select a File"> -->
									<input type="file" name="myfile" class="inputFileHidden" style="z-index: -1;">
								</div>
							</div>
						</div>	
					</div>
					<div class="col-lg-6">
						<div class="row">
							<div class="col-lg-12 form-group">
								<input name="subject" placeholder="Subject" class="common-input mb-20 form-control" type="text">
								<textarea class="common-textarea form-control" name="message" placeholder="Enter Messege"></textarea>
									<br>
									<button type="submit" class="genric-btn primary" style="float: right;">Submit</button>
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>
	</section>
	<!-- End contact-page Area -->

	<!-- start footer Area -->
	<% include ../researcher/partials/footer %>
	<script src="../../assets/js/researcher/journal.js"></script>
	<script src="../../assets/js/researcher/contact.js"></script>
	<!-- End footer Area -->
</body>

</html>