<!DOCTYPE html>
<html lang="en">

<head>
	<% include ../researcher/partials/head %>
</head>

<body>
	<% include ../researcher/partials/header %>
	<!-- start banner Area -->
	<section class="about-banner relative">
		<div class="overlay overlay-bg"></div>
		<div class="container">
			<div class="row d-flex align-items-center justify-content-center">
				<div class="about-content col-lg-12">
					<h1 class="text-white">
						Animal
					</h1>
					<p class="text-white link-nav"><a href="index">Home </a>
						<span class="lnr lnr-arrow-right"></span> <a href="researcher_animal">Animal</a>
					</p>
				</div>
			</div>
		</div>
	</section>
	<!-- End banner Area -->
	<section id="animalSearch" class="post-content-area">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="menu-content pb-70">
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-8 posts-list">
					<div class="row single-post">
						<div class="col-lg-5 col-md-5">
							<h4>Taxonomy Classification</h4>
							<hr>
							<div class="row">
								<div class="col-md-3">
									<ul class="tags">
										<li class="li">Phylum</li>
										<li class="li">Class</li>
										<li class="li">Order</li>
										<li class="li">Family</li>
										<li class="li">Genus</li>
										<li class="li">Species</li>
									</ul>
								</div>
								<div class="col-md-1">
									<ul class="tags">
										<li class="li">:</li>
										<li class="li">:</li>
										<li class="li">:</li>
										<li class="li">:</li>
										<li class="li">:</li>
										<li class="li">:</li>
									</ul>
								</div>
								<div class="col-md-6" id="animalTaxon">
									<ul class="tags">
										<li id="phylum" class="li"><%=(locals.phylum?phylum :"")%></li>
										<li class="li"><%=(locals.classs?classs:"")%></li>
										<li class="li"><%=(locals.orderr?orderr:"")%></li>
										<li class="li"><%=(locals.family?family:"")%></li>
										<li class="li"><%=(locals.genus?genus:"")%></li>
										<li class="li"><%=(locals.species?species:"")%></li>
									</ul>
								</div>
							</div>
						</div>
						<div class="col-lg-7 col-md-7">
							<div class="feature-img">
								<img width="300" height="200" src="<%=(locals.image?image.replace('public','assets'):"")%>" class="img-fluid animalPic"/>
							</div>
							<a class="posts-title">
								<h3><%=(locals.name?name:"")%></h3>
							</a>
							<div class="row">
								<div class="col-md-6">
									<p class="excert"> Scientific Name:</p>
								</div>
								<div class="col-md-6" id="scientificName">
									<p class="excert"><em><%=(locals.scientificName?scientificName:"")%></em></p>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-md-4 sidebar-widgets">
					<div class="widget-wrap">
						<div class="single-sidebar-widget tag-cloud-widget" id="bacteria">
							<h4 class="tagcloud-title">Bacteria</h4>
							<ul>
							<%
								var bacTags = "";
								if(locals.bacteria){
									bacteria.forEach((element, index) => {
										bacTags += "<li><a href='#'>" + element.bacteriumScientificName + "</a></li>";
									});
								}
							%>
							<%-bacTags%>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section id="noResults" class="post-content-area">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="menu-content pb-70"><br><br>
							<h4>
							<b>No results Found &nbsp; <span class="lnr lnr-sad"></span></b></h4>
						</div>
					</div>
				</div>
			</div>
	</section>

	<section style="background-color: #e7e7f9" class="recent-blog-area section-gap">
			<div class="container">
				<div class="row d-flex justify-content-center">
					<div class="menu-content pb-60 col-lg-9">
						<div class="title text-center">
							<h1 class="mb-10">Animal List</h1>
							<p>Living things from kingdom animalia extracted from published journals that can be found in the wild,  farm or in houses as pets. These animals carry pathogenic bacteria that can be harmful in human health.</p>
						</div>
					</div>
				</div>
					
						<div class ="displayAnimal"></div>
						<div class="active-recent-blog-carusel"><br>
						</div>
			</div>
		</section>

	<!-- start footer Area -->
	<% include ../researcher/partials/footer %>
	<!-- End footer Area -->
	<script src="../../assets/js/researcher/animalSearch.js"></script>
</body>

</html>